<Window x:Class="WatchdogControl.Views.EditWatchdogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatchdogControl.Views" xmlns:vm="clr-namespace:WatchdogControl.ViewModels"
        xmlns:cnv="clr-namespace:WatchdogControl.Converters" mc:Ignorable="d" Title="Редактирование Watchdog"
        Width="500" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" SizeToContent="Height"
        WindowStyle="ToolWindow" ResizeMode="NoResize" Loaded="Window_Loaded"
        FocusManager.FocusedElement="{Binding ElementName=FocusedElement}">

    <d:Window.DataContext>
        <vm:EditWatchdogViewModel />
    </d:Window.DataContext>

    <Window.Resources>

        <cnv:NullableIntConverter x:Key="NullableIntConverter" />
        <cnv:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value="2" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="DisabledButtonStyle" TargetType="{x:Type Button}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding TestingInProgress}" Value="True">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="RequiredFieldTemplate" TargetType="{x:Type Label}">
            <StackPanel Orientation="Horizontal">
                <Label Content="{TemplateBinding Content}" />
                <TextBlock Text=" *" Foreground="Red" VerticalAlignment="Top" />
            </StackPanel>
        </ControlTemplate>

    </Window.Resources>

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Наименование:" Template="{StaticResource RequiredFieldTemplate}" />
        <TextBox Grid.Row="0" Grid.Column="1" Name="FocusedElement" Text="{Binding Watchdog.Name}" />

        <Label Grid.Row="1" Grid.Column="0" Content="База данных:" Template="{StaticResource RequiredFieldTemplate}" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Watchdog.DbData.DataSource}" />

        <Label Grid.Row="2" Grid.Column="0" Content="Провайдер:" />
        <ComboBox Grid.Row="2" Grid.Column="1" IsEditable="False" Margin="2" ItemsSource="{Binding Providers}"
                DisplayMemberPath="Name" SelectedItem="{Binding Watchdog.DbData.Provider}" />

        <Label Grid.Row="3" Grid.Column="0" Content="Пользователь:" Template="{StaticResource RequiredFieldTemplate}" />
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Watchdog.DbData.User}" />

        <Label Grid.Row="4" Grid.Column="0" Content="Пароль:" Template="{StaticResource RequiredFieldTemplate}" />
        <PasswordBox Grid.Row="4" Grid.Column="1" Name="PasswordBox" Margin="2" FontSize="16" KeyUp="PasswordBox_KeyUp" />

        <Label Grid.Row="5" Grid.Column="0" Content="Номер агрегата:" />
        <TextBox Grid.Row="5" Grid.Column="1"
                Text="{Binding Watchdog.DbData.StationNo, Converter={StaticResource NullableIntConverter}}" />

        <Label Grid.Row="6" Grid.Column="0" Content="Таблица с Watchdog:"
                Template="{StaticResource RequiredFieldTemplate}" />
        <TextBox x:Name="WatchdogTableName" Grid.Row="6" Grid.Column="1"
                Text="{Binding Watchdog.DbData.TableName, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="7" Grid.Column="0" Content="Колонка с Watchdog:"
                Template="{StaticResource RequiredFieldTemplate}" />
        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding Watchdog.DbData.WatchdogFieldName}" />

        <Label Grid.Row="8" Grid.Column="0" Content="Колонка с параметром Watchdog:" />
        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding Watchdog.DbData.WatchdogParamFieldName}" />

        <Label Grid.Row="9" Grid.Column="0" Content="Параметр Watchdog:" />
        <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding Watchdog.DbData.WatchdogParamName}" />

        <Label Grid.Row="10" Grid.Column="0" Content="Колонка с датой Watchdog:" ToolTipService.ShowDuration="30000">
            <Label.ToolTip>
                <TextBlock>
                    <Run Text="Если введена колонка с датой последнего обновления" />
                    <LineBreak />
                    <Run Text="значения Watchdog из таблицы" />
                    <Run Text="{Binding Watchdog.DbData.TableName}" />,
                    <LineBreak />
                    <Run Text="то датой обновления значения Watchdog будет дата из колонки." />
                    <LineBreak />
                    <Run Text="Иначе датой последнего обновления значения Watchdog будет системная дата." />
                </TextBlock>
            </Label.ToolTip>
        </Label>
        <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding Watchdog.DbData.LastWatchdogDateFieldName}" />

        <Label Grid.Row="11" Grid.Column="0" Content="Интервал (сек, > 30) :"
                Template="{StaticResource RequiredFieldTemplate}" ToolTipService.ShowDuration="10000">
            <Label.ToolTip>
                <TextBlock>
                    <Run Text="Разница между текущей датой и датой последнего обновления Watchdog," />
                    <LineBreak />
                    <Run Text="за пределами которой считается, что Watchdog не обновляется." />
                </TextBlock>
            </Label.ToolTip>
        </Label>
        <TextBox Grid.Row="11" Grid.Column="1"
                Text="{Binding Watchdog.Condition.TimeAfterLastChangeValue, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />

        <Button Grid.Row="12" Grid.Column="1" Content="Тест Watchdog" Margin="0,5,2,5" Padding="4,0,4,0"
                ToolTip="Проверка введенных данных" Command="{Binding TestWatchdogCommand}" HorizontalAlignment="Right" />

        <Grid Grid.Row="13" Grid.Column="0" ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" ColumnSpan="2">
                <TextBlock Text="Идет проверка данных..." FontSize="14" Foreground="DeepPink">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding TestingInProgress}" Value="False">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Button Grid.Column="2" Margin="2" FontSize="14" FontWeight="Medium" IsDefault="True"
                    Style="{StaticResource DisabledButtonStyle}" Command="{Binding ConfirmCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
                <StackPanel Orientation="Horizontal">

                    <TextBlock Text="V" FontSize="18" FontWeight="Bold" FontFamily="Microsoft Sans Serif">

                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Foreground" Value="Green" />
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="DarkSeaGreen" />
                                    </Trigger>
                                    <DataTrigger Binding="{Binding TestingInProgress}" Value="True">
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>

                    </TextBlock>

                    <TextBlock Text="   OK" VerticalAlignment="Center" />
                </StackPanel>
            </Button>

            <Button Grid.Column="3" Margin="2" FontSize="14" IsCancel="True"
                    Style="{StaticResource DisabledButtonStyle}">

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="X" FontSize="18" FontWeight="Bold" FontFamily="Microsoft Sans Serif">

                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Foreground" Value="Red" />
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="#FFEC8484" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>

                    </TextBlock>
                    <TextBlock Text="   Отмена" VerticalAlignment="Center" />
                </StackPanel>

            </Button>
        </Grid>

    </Grid>
</Window>
